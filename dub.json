    ],
    "copyright": "Copyright Â© 2019, karita",
    "dflags": ["-dip25", "-dip1000", "-dip1008"],
    "subPackages": [
	{
	    "name": "core",
	    "targetType": "library",
	    "sourcePaths": ["core/source"],
	    "importPaths": ["core/source"],
	    "dependencies": {
		"mir-blas": "~>1.1.4",
		"mir-runtime": "~>0.0.22",
		"mir-random": "~>2.2.4",
	    }
	},
	{
	    "name": "cuda",
	    "targetType": "library",
	    "dependencies": {
		"grain2:core": "*"
	    },
	    "libs": ["cuda", "cudart", "cublas", "cudnn", "nvrtc"],
	    "versions": ["grain_cuda"],
	    "sourcePaths": ["cuda/source"],
	    "importPaths": ["cuda/source", "dpp/build"],
	    "buildTypes": {
		"unittest": {
		    "preBuildCommands": ["cd dpp; make cuda -j"],
		    "buildOptions": ["unittests", "debugMode", "debugInfo"],
		    "versions": ["grain_cuda", "grain_debug"],
		}
	    }
	},
	{
	    "name": "opencl",
	    "targetType": "library",
	    "dependencies": {
		"grain2:core": "*"
	    },
	    "libs": ["cuda", "cudart", "cublas", "cudnn", "nvrtc"],
	    "versions": ["grain_cuda"],
	    "sourcePaths": ["cuda/source"],
	    "importPaths": ["cuda/source", "dpp/build"],
	    "buildTypes": {
		"unittest": {
		    "preBuildCommands": ["cd dpp; make opencl -j"],
		    "buildOptions": ["unittests", "debugMode", "debugInfo"],
		    "versions": ["grain_opencl", "grain_debug"],
		}
	    }
	}

    ]
}
